.tabBar {
  position: fixed;
  width: 100%;
  height: 138rpx;
  bottom: 0;
}

.tabBar .tabBar-item {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  width: 35%;
  height: 100rpx;
  margin-top: 38rpx;
  background: #F8F8F8;
}

.tabBar-item .container {
  width: 66.4rpx;
  height: 100rpx;
}

.tabBar-item image {
  display: block;
  width: 38.4rpx;
  height: 60rpx;
  margin: 6rpx 14rpx;
}

.tabBar-item .title {
  width: 66.4rpx;
  height: 20rpx;
  text-align: center;
  font-size: 20rpx;
  color: #8E8E93;
}

.tabBar .photo {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 34%;
  right: 34%;
}

.tabBar .photo image {
  width: 100%;
  height: 100%;
}


/* top view */
.topView {
  margin: 0 60rpx;
}

.topView .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.topView .info .title {
  font-size: 52rpx;
  margin-bottom: 36rpx;
}

.topView view {
  font-size: 28rpx;
}

.topView .avatar image {
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
}

.tag {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.tag view {
  padding: 6rpx 20rpx;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
}

.meat {
  background: #ffd1ab;
}

.fruit {
  background: #ffed84;
}

.vegetable {
  background: #e2f4b5;
}

.grey {
  background: grey;
}

.topBack {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 32rpx;
  font-size: 32rpx;
}

.topBack image {
  width: 36rpx;
  height: 40rpx;
}

.food-item {
  position: relative;
  width: 152rpx;
  height: 152rpx;
  border-radius: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.food-item .name {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 10rpx;
  text-align: center;
  font-size: 22rpx;
}

.food-item image {
  width: 102rpx;
}

.dish-item {
  position: relative;
  width: 515rpx;
  height: 750rpx;
  margin: 0 32rpx;
  padding: 32rpx;
}

.dish-item .bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.dish-item .front {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  right: 32rpx;
  bottom: 32rpx;
  z-index: 2;
  color: white;
}

.dish-item .name {
  font-size: 48rpx;
}

.dish-item .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
  font-size: 28rpx;
}

.info image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

.left, .right {
  display: flex;
  align-items: center;
  height: 32rpx;
  line-height: 32rpx;
}

.relate {
  position: relative;
  width: 686rpx;
  margin: 32rpx 0;
}

.relate .bg {
  position: relative;
  width: 100%;
}

.relate .name {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(51, 51, 51, 0.2);
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  z-index: 2;
}
