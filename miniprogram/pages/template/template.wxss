.tabBar {
  position: fixed;
  width: 100%;
  height: 138rpx;
  bottom: 0;
}

.tabBar .tabBar-item {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  width: 35%;
  height: 100rpx;
  margin-top: 38rpx;
  background: #F8F8F8;
}

.tabBar-item .container {
  width: 66.4rpx;
  height: 100rpx;
}

.tabBar-item image {
  display: block;
  width: 38.4rpx;
  height: 60rpx;
  margin: 6rpx 14rpx;
}

.tabBar-item .title {
  width: 66.4rpx;
  height: 20rpx;
  text-align: center;
  font-size: 20rpx;
  color: #8E8E93;
}

.tabBar .photo {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 34%;
  right: 34%;
}

.tabBar .photo image {
  width: 100%;
  height: 100%;
}

.topView {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  top: 20rpx;
  left: 32rpx;
  right: 32rpx;
  height: 88rpx;
}

.topView .title {
  font-size: 64rpx;
}

.topView .avatar image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.food-item {
  width: 192rpx;
  height: 192rpx;
  margin-right: 32rpx;
  border-radius: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.food-item .name {
  text-align: center;
  font-size: 20rpx;
}

.yellow {
  background: #FBF2B3;
}
.yellow-bright {
  background: #FFED84;
}
.pink {
  background: #FCE4DB;
}
.green {
  background: #E9EFBE;
}
.orange {
  background: #FFB882;
}

.dish-item {
  position: relative;
  width: 550rpx;
  height: 800rpx;
  margin: 0 32rpx;
  padding: 32rpx;
}

.dish-item .bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.dish-item .front {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  right: 32rpx;
  bottom: 32rpx;
  z-index: 2;
  color: white;
}

.dish-item .name {
  font-size: 48rpx;
}

.dish-item .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
  font-size: 28rpx;
}

.info image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

.left, .right {
  display: flex;
  align-items: center;
  height: 32rpx;
  line-height: 32rpx;
}